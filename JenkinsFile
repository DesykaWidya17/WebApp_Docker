pipeline {
    agent any

    stages {
        stage('Docker') {
            steps {
                echo '🐳 Docker Test Stage - Hello World!'
                bat '''
                echo ===============================
                echo 🚀 Hello World from Docker Pipeline!
                echo ===============================
                '''
            }
        }
    }

    post {
        success {
            echo '✅ Pipeline finished successfully!'
        }
        failure {
            echo '❌ Pipeline failed. Check logs!'
        }
    }
}

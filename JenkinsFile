pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'cc-webapp'
        DOCKER_TAG = "${BUILD_NUMBER}"
        CONTAINER_NAME = 'cc-webapp-container'
        CI = 'true'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¦ Checking out source code...'
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'ğŸ“¥ Installing npm dependencies...'
                sh '#!/bin/bash -xe\nnpm ci --cache /tmp/.npm --no-optional'
            }
        }

        stage('Run Tests') {
            steps {
                echo 'ğŸ§ª Running tests...'
                sh '#!/bin/bash -xe\nnpm run test:ci || true'
            }
        }

        stage('Build Application') {
            steps {
                echo 'ğŸ—ï¸ Building React application...'
                sh '#!/bin/bash -xe\nnpm run build'
                echo 'âœ… Build completed successfully!'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'ğŸ³ Testing Docker access...'
                sh '#!/bin/bash -xe\ndocker version'

                echo 'ğŸ—ï¸ Building Docker image on host...'
                sh '#!/bin/bash -xe\ndocker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} .'
                sh '#!/bin/bash -xe\ndocker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_IMAGE}:latest'
                echo "âœ… Docker image built successfully: ${DOCKER_IMAGE}:${DOCKER_TAG}"
            }
        }

        stage('Deploy with Docker Compose') {
            steps {
                echo 'ğŸš€ Deploying application...'
                sh '#!/bin/bash -xe\ndocker-compose down || true'
                sh '#!/bin/bash -xe\ndocker-compose up -d --build'
                echo 'âœ… Application deployed successfully!'
            }
        }

        stage('Health Check') {
            steps {
                echo 'ğŸ©º Performing health check...'
                sh '#!/bin/bash -xe\nsleep 10\ncurl -f http://localhost:3000 --max-time 30'
                echo 'âœ… Health check passed! Application is running on port 3000'
            }
        }
    }

    post {
        always {
            echo 'ğŸ§¹ Cleaning up workspace...'
            cleanWs()
        }
        success {
            echo 'ğŸ‰ Pipeline completed successfully!'
        }
        failure {
            echo 'âŒ Pipeline failed! Check logs for details.'
        }
    }
}

pipeline {
    agent any

    environment {
        NODE_HOME = "C:\\Program Files\\nodejs"
        PATH = "${env.NODE_HOME};${env.PATH}"
    }

    stages {
        stage('Checkout SCM') {
            steps {
                echo "📦 Checking out source code..."
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "📥 Installing npm dependencies..."
                // Use NODE_HOME env var and prefer npm ci for reproducible installs; fallback to install
                bat 'echo Fixing NPM config and increasing timeout... && %NODE_HOME%\\npm.cmd config set fetch-retries 5 && %NODE_HOME%\\npm.cmd config set fetch-timeout 600000 && echo Installing dependencies (npm ci || npm install) && %NODE_HOME%\\npm.cmd ci || %NODE_HOME%\\npm.cmd install'
            }
        }

        stage('Run Tests') {
            steps {
                echo "🧪 Running tests (CI mode, non-interactive)..."
                // Run CI test script (non-interactive). Fallback to default test invocation if missing.
                bat 'set CI=true && %NODE_HOME%\\npm.cmd run test:ci || (set CI=true && %NODE_HOME%\\npm.cmd test -- --passWithNoTests)'
            }
        }

        stage('Build Application') {
            steps {
                echo "🏗️ Building the application..."
                bat '"C:\\Program Files\\nodejs\\npm.cmd" run build'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "🐳 Building Docker image..."
                bat 'docker build -t webapp_docker_image .'
            }
        }

        stage('Deploy with Docker Compose') {
            steps {
                echo "🚀 Deploying with Docker Compose..."
                bat 'docker-compose up -d'
            }
        }

        stage('Health Check') {
            steps {
                echo "🔍 Checking container health..."
                bat 'docker ps'
            }
        }
    }

    post {
        always {
            echo "🧹 Cleaning up workspace..."
            deleteDir()
        }
        failure {
            echo "❌ Pipeline failed! Check logs for details."
        }
        success {
            echo "✅ Deployment successful!"
        }
    }
}

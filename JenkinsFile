pipeline {
    agent any

    stages {
        stage('Docker Test Pipeline') {
            steps {
                echo 'üê≥ Welcome to Docker Test Pipeline!'
                bat '''
                echo ===== CHECKING SYSTEM =====
                echo Running on: %COMPUTERNAME%
                echo Current directory: %CD%
                echo ===== CHECK DOCKER VERSION =====
                docker --version
                echo ===== CHECK IMAGES =====
                docker images
                echo ===== CHECK CONTAINERS =====
                docker ps -a
                echo ===== DOCKER TEST DONE =====
                '''
            }
        }
    }

    post {
        success {
            echo '‚úÖ Docker Test Pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Docker Test Pipeline failed. Check logs!'
        }
    }
}

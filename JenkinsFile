pipeline {
    agent any

    environment {
        // Set environment variables jika perlu
        NODE_ENV = 'production'
        NPM_CONFIG_CACHE = 'C:\\tmp\\.npm'
    }

    options {
        // Batasi history build untuk hemat space
        buildDiscarder(logRotator(numToKeepStr: '10'))
        timeout(time: 60, unit: 'MINUTES')
    }

    stages {
        stage('Checkout SCM') {
            steps {
                echo "ğŸ“¦ Checking out source code..."
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "ğŸ“¥ Installing npm dependencies..."
                // Gunakan --registry untuk bypass proxy/connection issue
                bat '''
                npm ci --cache %NPM_CONFIG_CACHE% --no-optional --registry=https://registry.npmjs.org/
                '''
            }
        }

        stage('Run Tests') {
            steps {
                echo "ğŸ§ª Running tests..."
                bat 'npm test'
            }
        }

        stage('Build Application') {
            steps {
                echo "ğŸ—ï¸ Building application..."
                bat 'npm run build'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "ğŸ³ Building Docker image..."
                // Pastikan Docker sudah terinstal & running
                bat '''
                docker build -t my-web-app:latest .
                '''
            }
        }

        stage('Deploy with Docker Compose') {
            steps {
                echo "ğŸš€ Deploying application..."
                bat '''
                docker-compose down
                docker-compose up -d --build
                '''
            }
        }

        stage('Health Check') {
            steps {
                echo "ğŸ’“ Performing health check..."
                bat '''
                curl -s -o NUL http://localhost:3000 || exit 1
                '''
            }
        }
    }

    post {
        success {
            echo "âœ… Pipeline completed successfully!"
        }
        failure {
            echo "âŒ Pipeline failed! Check logs for details."
        }
        always {
            echo "ğŸ§¹ Cleaning up workspace..."
            // Gunakan cleanWs() plugin, lebih aman untuk Windows
            cleanWs()
        }
    }
}
